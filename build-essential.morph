- build-depends:
  - stage2-binutils
  - stage2-busybox
  - stage2-eglibc
  - stage2-fhs-dirs
  - stage2-gawk
  - stage2-gcc
  - stage2-linux-api-headers
  - stage2-make
  - stage2-reset-specs
  - eglibc
  - zlib
  build-mode: staging
  name: gcc
  prefix: /usr
  ref: baserock/build-essential
