name: nginx
kind: chunk
configure-commands:
- |
  ./configure --prefix=$PREFIX \
    --conf-path=/etc/nginx/nginx.conf \
    --pid-path=/etc/nginx/nginx.pid \
    --error-log-path=/var/log/nginx/error.log \
    --http-log-path=/var/log/nginx/access.log
build-commands:
- make
install-commands:
- make install
